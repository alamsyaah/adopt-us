<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dicoding.Terang" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/darker_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonDetail">
        <item name="backgroundTint">#FE6A4F</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SearchBackground">
        <item name="android:radius">8dp</item>
        <item name="color">@color/md_light_blue_100</item>
    </style>

    <style name="OnboardingButton">
        <item name="cornerRadius">100dp</item>
        <item name="android:color">@color/md_deep_orange_300</item>
    </style>

</resources>